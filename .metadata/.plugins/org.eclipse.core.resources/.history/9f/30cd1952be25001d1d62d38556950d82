package com.casestudy.hectordiaz.controller;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

@RestController
@RequestMapping("Hello")
public class helloWorldController {
	
	@GetMapping
	@RequestMapping("world")
	public String getHelloWorld() {
		return "hello Worcxcxcxld";
	}
	
	@GetMapping
	@RequestMapping("bean")
	public bean getHelloWorldBean() {
				
		return new bean("wazzup");
		
	}
	
	@GetMapping
	@RequestMapping("paramether/{var}")
	public bean returnBEanParamether(@PathVariable String name) {
		
		return new bean (String.format("hello, %s",name));
	}


}
